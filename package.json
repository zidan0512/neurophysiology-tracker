{
  "name": "neurophysiology-tracker-backend",
  "version": "1.0.0",
  "description": "Backend server for Zidan's Neurophysiology Tracker application with SQLite database",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "build": "echo 'No build step required for Node.js backend'",
    "setup": "npm install && node setup.js",
    "db:reset": "rm -f neurophysiology.db && node server.js",
    "db:backup": "cp neurophysiology.db neurophysiology_backup_$(date +%Y%m%d_%H%M%S).db",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "neurophysiology",
    "medical",
    "tracker",
    "healthcare",
    "express",
    "sqlite",
    "api",
    "backend"
  ],
  "author": "Zidan Medical Team",
  "license": "MIT",
  "dependencies": {
    "@capacitor/android": "^7.4.3",
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@react-native-community/cli": "^20.0.2",
    "@types/jest": "^29.5.8",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.4.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zidan-medical/neurophysiology-tracker.git"
  },
  "bugs": {
    "url": "https://github.com/zidan-medical/neurophysiology-tracker/issues"
  },
  "homepage": "https://github.com/zidan-medical/neurophysiology-tracker#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "off"
    }
  }
}
